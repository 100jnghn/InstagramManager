<Page
    x:Class="InstagramManager.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InstagramManager.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:dg="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"

    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Grid.Column="0" x:Name="dashboardGrid" Visibility="Visible">
        
        <!-- Row Definition 시작 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <!-- Row Definition 끝 -->

        <!-- 파일 업로드 시작 -->
        <Grid Grid.Row="0">
            <StackPanel Orientation="Vertical" Margin="0,0,0,50">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Margin="0,0,20,20">
                        <ui:TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="40" FontWeight="Bold">
                            <Run Text="파일 업로드" Foreground="White"/>
                        </ui:TextBlock>
                    </Grid>

                    <Grid Grid.Column="1" Margin="0,0,0,20">
                        <ui:TextBlock x:Name="tblUploadedFiles" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="15">
                            <Run Text="{Binding ViewModel.UploadMessage}" Foreground="LightSlateGray"/>
                        </ui:TextBlock>
                    </Grid>
                </Grid>

                
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Margin="10,0,10,10">
                        <ui:Button Command="{Binding ViewModel.btnFileUploadClickedCommand}" x:Name="btnOpenFile" Content="파일 선택" Width="100" Height="40" HorizontalAlignment="Left"/>
                    </Grid>

                    <Grid Grid.Column="1" Margin="0,0,10,10">
                        <ui:Button Command="{Binding ViewModel.btnSearchStartCommand}" x:Name="btnSearch" Content="조회 시작" Width="100" Height="40" HorizontalAlignment="Left" Visibility="Hidden"/>
                    </Grid>

                    <Grid Grid.Column="2" Margin="0,0,0,10" Width="820">
                        <ui:Button Command="{Binding ViewModel.btnSaveF4FInformationCommand}" x:Name="btnSaveF4F" Width="130" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Visibility="Hidden">
                            <Run Text="맞팔로우 정보 저장" FontSize="12"/>
                        </ui:Button>
                    </Grid>
                </Grid>
                
            </StackPanel>
        </Grid>
        <!-- 파일 업로드 끝 -->

        <!-- 회원님을 팔로우하지 않는 계정 시작 -->
        <Grid Grid.Row="1">
            <StackPanel Orientation="Vertical" Margin="0,0,0,50">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" /> 
                        <ColumnDefinition Width="*" /> 
                    </Grid.ColumnDefinitions>


                    
                    <Grid Grid.Column="0" Width="700">
                        <ui:TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" >
                            <Run Text="회원님을 팔로우하지 않는 계정" Foreground="White"/>
                        </ui:TextBlock>
                    </Grid>

                    <Grid Grid.Column="1" Width="300">
                        <ui:Button x:Name="btnExelUnfollower" Command="{Binding ViewModel.btnExportExcelUnfollowerCommand}" HorizontalAlignment="Right" Width="130" Visibility="Hidden">
                            <Run Text="엑셀 파일로 저장" FontSize="12" Foreground="LawnGreen"/>
                        </ui:Button>
                    </Grid>
                </Grid>

                

 
                

                <ui:DataGrid x:Name="dgUnfollower" ItemsSource="{Binding ViewModel.Unfollowers}" Width="auto" Height="250" VerticalAlignment="Center" HorizontalAlignment="Left" GridLinesVisibility="Horizontal" AutoGenerateColumns="False">
                    <ui:DataGrid.Columns>
                        <dg:DataGridTextColumn Header="ID" Binding="{Binding Value}" Width="300"/>

                        <dg:DataGridTemplateColumn Header="주소" Width="450">
                            <dg:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                            <Hyperlink NavigateUri="{Binding Href}" RequestNavigate="Hyperlink_RequestNavigate">
                                                <TextBlock Text="{Binding Href}" />
                                            </Hyperlink>
                                        </TextBlock>
                                </DataTemplate>
                            </dg:DataGridTemplateColumn.CellTemplate>
                        </dg:DataGridTemplateColumn>

                        <dg:DataGridTextColumn Header="n일 동안 팔로우 함" Binding="{Binding DateFromToday}" Width="250"/>
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
            </StackPanel>
        </Grid>
        <!-- 회원님을 팔로우하지 않는 계정 끝 -->

        <!-- 최근 팔로우 끊긴 계정 시작 -->
        <Grid Grid.Row="2">
            <StackPanel Orientation="Vertical" Margin="0,0,0,50">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Width="700">
                        <ui:TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,0,0,20">
                            <Run Text="최근 팔로우가 끊긴 계정" Foreground="White"/>
                        </ui:TextBlock>
                    </Grid>

                    <Grid Grid.Column="1" Width="300">
                        <ui:Button x:Name="btnExelRecentlyUnfollower" Command="{Binding ViewModel.btnExportExcelRecentlyUnfollowerCommand}" HorizontalAlignment="Right" Width="130" Visibility="Hidden">
                            <Run Text="엑셀 파일로 저장" FontSize="12" Foreground="LawnGreen"/>
                        </ui:Button>
                    </Grid>

                </Grid>
                
                

                <ui:DataGrid x:Name="dgRecentlyUnfollwer" ItemsSource="{Binding ViewModel.RecentlyUnfollowers}" Width="auto" Height="250" VerticalAlignment="Center" HorizontalAlignment="Left" GridLinesVisibility="Horizontal" AutoGenerateColumns="False">
                    <ui:DataGrid.Columns>
                        <dg:DataGridTextColumn Header="ID" Binding="{Binding Value}" Width="300"/>

                        <dg:DataGridTemplateColumn Header="주소" Width="450">
                            <dg:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Hyperlink NavigateUri="{Binding Href}" RequestNavigate="Hyperlink_RequestNavigate">
                                            <TextBlock Text="{Binding Href}" />
                                        </Hyperlink>
                                    </TextBlock>
                                </DataTemplate>
                            </dg:DataGridTemplateColumn.CellTemplate>
                        </dg:DataGridTemplateColumn>

                        <dg:DataGridTextColumn Header="n일 전에 언팔로우" Binding="{Binding DateFromToday}" Width="250"/>
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
            </StackPanel>
        </Grid>
        <!-- 최근 팔로우 끊긴 계정 끝 -->




    </Grid>
</Page>
