<Page
    x:Class="InstagramManager.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InstagramManager.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:dg="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"

    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Grid.Column="0" x:Name="dashboardGrid" Visibility="Visible">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <ui:TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="Bold">
                    <Run Text="파일 업로드" Foreground="Black"/>
                </ui:TextBlock>

                <ui:Button Command="{Binding ViewModel.btnFileUploadClickedCommand}" x:Name="btnOpenFile" Content="Open File"/>

                <ui:TextBlock x:Name="tblUploadedFiles">
                    <Run Text="{Binding ViewModel.UploadMessage}"/>
                </ui:TextBlock>

                <ui:Button Command="{Binding ViewModel.btnSearchStartCommand}" x:Name="btnSearch" Content="Search Start" Visibility="Hidden"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <ui:TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="Bold">
                    <Run Text="회원님을 팔로우하지 않는 계정" Foreground="Black"/>
                </ui:TextBlock>
                
                <ui:DataGrid x:Name="dgUnfollower" ItemsSource="{Binding ViewModel.Unfollowers}" Width="1200" Height="600" VerticalAlignment="Center" HorizontalAlignment="Left" AutoGenerateColumns="False">
                    <ui:DataGrid.Columns>
                        <dg:DataGridTextColumn Header="ID" Binding="{Binding Value}" Width="auto"/>

                        <dg:DataGridTemplateColumn Header="주소" Width="auto">
                            <dg:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                            <Hyperlink NavigateUri="{Binding Href}" RequestNavigate="Hyperlink_RequestNavigate">
                                                <TextBlock Text="{Binding Href}" />
                                            </Hyperlink>
                                        </TextBlock>
                                </DataTemplate>
                            </dg:DataGridTemplateColumn.CellTemplate>
                        </dg:DataGridTemplateColumn>

                        <dg:DataGridTextColumn Header="n일 동안 팔로우 함" Binding="{Binding DateFromToday}" Width="auto"/>
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
            </StackPanel>
        </Grid>
        
    </Grid>
</Page>
