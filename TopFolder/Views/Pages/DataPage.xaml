<Page
    x:Class="InstagramManager.Views.Pages.DataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InstagramManager.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:InstagramManager.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:dg="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
    
    Title="DataPage"
    d:DataContext="{d:DesignInstance local:DataPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid x:Name="dataGrid" Visibility="Visible">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 타이틀 -->
        <Grid Grid.Row="0">
            <ui:TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Height="50" FontWeight="Bold" FontSize="40" Margin="0,0,0,10">
                <Run Text="맞팔로우 정보" Foreground="White"/>
            </ui:TextBlock>
        </Grid>

        <!-- 페이지 메시지 표시 -->
        <Grid Grid.Row="1">
            <ui:TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" FontSize="15" Margin="10,20,0,60">
                <Run Text="test" Foreground="LightSlateGray"/>
            </ui:TextBlock>
        </Grid>

        <!--맞팔 DataGrid -->
        <Grid Grid.Row="2" Margin="0,0,0,30">
            <ui:DataGrid x:Name="dgF4F" ItemsSource="{Binding ViewModel.F4fDatabase}" Width="auto" Height="350" VerticalAlignment="Top" HorizontalAlignment="Left" GridLinesVisibility="Horizontal" AutoGenerateColumns="False" Margin="0,0,0,10">
                <ui:DataGrid.Columns>
                    
                    <!-- 맞팔 아이디 -->
                    <dg:DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="270" />
    
                    <!-- 맞팔 인스타 주소 -->
                    <dg:DataGridTemplateColumn Header="주소" Width="430">
                        <dg:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Hyperlink NavigateUri="{Binding Address}" RequestNavigate="Hyperlink_RequestNavigate">
                                        <TextBlock Text="{Binding Address}" />
                                    </Hyperlink>    
                                </TextBlock>
                            </DataTemplate>
                        </dg:DataGridTemplateColumn.CellTemplate>
                    </dg:DataGridTemplateColumn>

                    <!-- 맞팔로우 기간 (일) -->
                    <dg:DataGridTextColumn Header="맞팔 기간" Binding="{Binding Date}" Width="120" />
                    
                    <!-- 메모 -->
                    <dg:DataGridTextColumn Header="메모" Binding="{Binding Description}" Width="350"/>
                </ui:DataGrid.Columns>
            </ui:DataGrid>
        </Grid>

        <!-- 세부 정보 -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                    <ComboBox x:Name="cbxSearchID" Width="300" Height="60" Text="{Binding ViewModel.SelectedID}" ItemsSource="{Binding ViewModel.Id}" IsEditable="True" Margin="0,0,10,10"/>
                    <ui:Button x:Name="btnSearchID" Command="{Binding ViewModel.btnSearchCommand}" Width="60" Height="30" VerticalAlignment="Center" Content="검색" Margin="0,0,0,10" Background="CornflowerBlue" Foreground="Black" FontWeight="Bold"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <StackPanel Orientation="Vertical" Width="1000" HorizontalAlignment="Left" Margin="30,0,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,50" HorizontalAlignment="Left">
                        
                        <ui:TextBlock Text="ID" Width="30" HorizontalAlignment="Left" TextAlignment="Right" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                        <ui:TextBlock Text="{Binding ViewModel.SelectedID}" Width="250" HorizontalAlignment="Left" TextAlignment="Left" Foreground="White" Margin="0,0,10,0"/>

                        <ui:TextBlock Text="주소" Width="30" HorizontalAlignment="Left" TextAlignment="Right" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                        <ui:TextBlock Width="450" HorizontalAlignment="Left" TextAlignment="Left">
                            <Hyperlink NavigateUri="" RequestNavigate="Hyperlink_RequestNavigate">
                                <TextBlock Text="{Binding ViewModel.SelectedAddress}" HorizontalAlignment="Left"/>
                            </Hyperlink>    
                        </ui:TextBlock>

                        <ui:TextBlock Text="맞팔로우 기간" Width="100" HorizontalAlignment="Left" TextAlignment="Right" Foreground="white" FontWeight="Bold" Margin="0,0,10,0"/>
                        <ui:TextBlock Text="{Binding ViewModel.SelectedDate}" Width="150" HorizontalAlignment="Left" TextAlignment="Left" Foreground="white" Margin="0,0,10,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                            <ui:TextBlock Text="메모" Width="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" TextAlignment="Right" Foreground="White" FontWeight="Bold" Margin="0,0,10,5"/>
                            <ui:Button Command="{Binding ViewModel.btnSaveMemoCommand}" Width="60" Height="30" VerticalAlignment="Center" Content="저장" Background="CornflowerBlue" Foreground="Black" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <ui:TextBox Width="600" MinWidth="600" Height="80" Text="{Binding ViewModel.SelectedDescription, Mode=TwoWay}" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                </StackPanel>
                
            </Grid>
        </Grid>
        
    </Grid>
</Page>
