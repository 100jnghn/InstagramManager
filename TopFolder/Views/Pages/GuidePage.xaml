<Page 
    x:Class="InstagramManager.Views.Pages.GuidePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:InstagramManager.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      
      
    Title="GuidePage"
    d:DataContext="{d:DesignInstance local:GuidePage,
                                         IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,100">
            <TextBlock Width="300" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Run Text="사용 방법 안내" FontSize="40" FontWeight="Bold"/>
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,0,0,0">
            <StackPanel Orientation="Vertical">
                <TextBlock Width="700" Height="50">
                    <Run Text="1.   데스크탑 인스타그램에 접속합니다" FontSize="15"/>
                </TextBlock>

                <TextBlock Width="700" Height="50">
                    <Run Text="2.   좌측 하단 " FontSize="15" />
                    <Run Text="'더 보기' " FontSize="15" Foreground="GreenYellow" />
                    <Run Text="클릭 후 " FontSize="15" />
                    <Run Text="'설정'" FontSize="15" Foreground="GreenYellow" />
                    <Run Text="에 들어갑니다" FontSize="15" />
                </TextBlock>

                <TextBlock Width="700" Height="50">
                    <Run Text="3.   " FontSize="15" />
                    <Run Text="'설정' " FontSize="15" Foreground="GreenYellow" />
                    <Run Text="탭에서 " FontSize="15" />
                    <Run Text="'Meta 계정 센터'" FontSize="15" Foreground="GreenYellow"/>
                    <Run Text="에 접속합니다" FontSize="15" />
                </TextBlock>

                <TextBlock Width="700" Height="50">
                    <Run Text="4.   좌측 " FontSize="15" />
                    <Run Text="'계정 설정'" FontSize="15" Foreground="GreenYellow"/>
                    <Run Text="에서 " FontSize="15" />
                    <Run Text="'내 정보 및 권한'" FontSize="15" Foreground="GreenYellow"/>
                    <Run Text="을 클릭합니다" FontSize="15" />
                </TextBlock>

                <TextBlock Width="700" Height="50">
                    <Run Text="6.   " FontSize="15" />
                    <Run Text="'내 정보 내보내기' " FontSize="15" Foreground="GreenYellow" />
                    <Run Text="클릭 후 " FontSize="15" />
                    <Run Text="'내보내기 만들기'" FontSize="15" Foreground="GreenYellow"/>
                    <Run Text="를 선택합니다" FontSize="15" />
                </TextBlock>

                <TextBlock Width="700" Height="50">
                    <Run Text="7.   " FontSize="15" />
                    <Run Text="'프로필 선택'" FontSize="15" Foreground="GreenYellow"/>
                    <Run Text="에서 관리할 본인의 인스타그램 계정을 선택합니다" FontSize="15" />
                </TextBlock>

                <TextBlock Width="700" Height="50">
                    <Run Text="8.   " FontSize="15" />
                    <Run Text="'내보낼 위치 선택'" FontSize="15" Foreground="GreenYellow" />
                    <Run Text="에서 " FontSize="15" />
                    <Run Text="'기기로 내보내기'" FontSize="15" Foreground="GreenYellow"/>
                    <Run Text="를 선택합니다" FontSize="15" />
                </TextBlock>

                <TextBlock Width="700" Height="50">
                    <Run Text="9-1. " FontSize="15" />
                    <Run Text="'내보내기 확인 - 알림 받기'" FontSize="15" Foreground="GreenYellow"/>
                    <Run Text="에서 알림 받을 이메일을 선택합니다" FontSize="15" />
                </TextBlock>

                <TextBlock Width="700" Height="50">
                    <Run Text="9-2. " FontSize="15" />
                    <Run Text="'내보내기 확인 - 정보 맞춤 설정'" FontSize="15" Foreground="GreenYellow"/>
                    <Run Text="에서" FontSize="15" />
                    <Run Text="'팔로워 및 팔로잉'" FontSize="15" Foreground="IndianRed"/>
                    <Run Text="항목만 체크합니다" FontSize="15" />
                </TextBlock>

                <TextBlock Width="700" Height="50">
                    <Run Text="9-3. " FontSize="15" />
                    <Run Text="'내보내기 확인 - 기간'" FontSize="15" Foreground="GreenYellow"/>
                    <Run Text="에서 " FontSize="15" />
                    <Run Text="'전체 기간'" FontSize="15" Foreground="IndianRed"/>
                    <Run Text="을 선택합니다" FontSize="15" />
                </TextBlock>

                <TextBlock Width="700" Height="50">
                    <Run Text="9-4. " FontSize="15" />
                    <Run Text="'내보내기 확인 - 형식'" FontSize="15" Foreground="GreenYellow" />
                    <Run Text="에서" FontSize="15" />
                    <Run Text="'JSON'" FontSize="15" Foreground="IndianRed"/>
                    <Run Text="을 선택합니다." FontSize="15" />
                </TextBlock>

                <TextBlock Width="700" Height="50">
                    <Run Text="9-5. 위 설정을 모두 마친 후 " FontSize="15" />
                    <Run Text="'내보내기 시작'" FontSize="15" Foreground="GreenYellow"/>
                    <Run Text="을 클릭합니다" FontSize="15" />
                </TextBlock>

                <TextBlock Width="700" Height="50">
                    <Run Text="10.  작업 완료 메일을 받으면 Download를 누른 후 비밀번호를 입력하고 파일을 다운받습니다" FontSize="15" />
                </TextBlock>

                <TextBlock Width="700" Height="50">
                    <Run Text="11.  다운받은 zip파일을 " FontSize="15" />
                    <Run Text="압축을 풀지 않은 상태 그대로 " FontSize="15" Foreground="IndianRed"/>
                    <Run Text="업로드합니다" FontSize="15" />
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
